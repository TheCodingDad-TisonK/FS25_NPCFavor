<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose">
    <GuiElement type="empty" profile="fillAll">
        <!-- Dark overlay background -->
        <GuiElement type="bitmap" profile="npcFillAll" imageColor="0 0 0 0.7" />
        
        <!-- Main dialog container -->
        <GuiElement type="empty" profile="npcCenterDialog" size="900px 700px">
            <!-- Dialog background -->
            <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.12 0.12 0.15 0.95" />
            
            <!-- Title bar -->
            <GuiElement type="empty" profile="npcFullWidth" position="0 0" size="900px 60px">
                <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.2 0.3 0.4 1" />
                <GuiElement type="text" profile="npcDialogTitle" position="20px 0"
                            text="$l10n_npc_favor_management_title" id="titleText" />
            </GuiElement>
            
            <!-- Subtitle / Info bar -->
            <GuiElement type="empty" profile="npcFullWidth" position="0 60px" size="900px 40px">
                <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.15 0.15 0.18 1" />
                <GuiElement type="text" profile="npcDialogSubtitle" position="20px 0"
                            text="Active Favors" id="subtitleText" />
            </GuiElement>
            
            <!-- Scrollable favor list area -->
            <GuiElement type="empty" profile="npcFullWidth" position="0 100px" size="900px 500px">
                <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.08 0.08 0.10 1" />
                
                <!-- Favor rows (up to 10 visible favors) -->
                <!-- Row 1 -->
                <GuiElement type="empty" id="favor1bg" profile="npcFullWidth" position="10px 10px" size="880px 90px">
                    <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.18 0.18 0.22 1" />
                    
                    <!-- NPC Name -->
                    <GuiElement type="text" id="favor1npc" profile="npcFavorNPCName" 
                                position="15px 10px" size="200px 25px" text="" />
                    
                    <!-- Favor Description -->
                    <GuiElement type="text" id="favor1desc" profile="npcFavorDesc" 
                                position="15px 35px" size="650px 20px" text="" />
                    
                    <!-- Time Remaining -->
                    <GuiElement type="text" id="favor1time" profile="npcFavorTime" 
                                position="15px 60px" size="300px 20px" text="" />
                    
                    <!-- Reward -->
                    <GuiElement type="text" id="favor1reward" profile="npcFavorReward" 
                                position="320px 60px" size="150px 20px" text="" />
                    
                    <!-- View Details Button -->
                    <GuiElement type="button" id="favor1view" profile="npcSmallButton" 
                                position="680px 15px" size="90px 30px" text="$l10n_button_view" 
                                onClick="onClickFavor1View" />
                    
                    <!-- Cancel Button -->
                    <GuiElement type="button" id="favor1cancel" profile="npcSmallButtonRed" 
                                position="780px 15px" size="90px 30px" text="$l10n_button_cancel" 
                                onClick="onClickFavor1Cancel" />
                    
                    <!-- Go To NPC Button -->
                    <GuiElement type="button" id="favor1goto" profile="npcSmallButton" 
                                position="680px 50px" size="90px 30px" text="$l10n_button_goto" 
                                onClick="onClickFavor1Goto" />
                    
                    <!-- Complete Button (debug/testing) -->
                    <GuiElement type="button" id="favor1complete" profile="npcSmallButtonGreen" 
                                position="780px 50px" size="90px 30px" text="$l10n_button_complete" 
                                onClick="onClickFavor1Complete" />
                </GuiElement>
                
                <!-- Repeat for favors 2-10 -->
                <!-- (Template repeated 9 more times with id="favor2*", favor3*, etc.) -->
                <!-- For brevity, showing structure for favor 2 only -->
                
                <GuiElement type="empty" id="favor2bg" profile="npcFullWidth" position="10px 110px" size="880px 90px">
                    <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.18 0.18 0.22 1" />
                    <GuiElement type="text" id="favor2npc" profile="npcFavorNPCName" position="15px 10px" size="200px 25px" text="" />
                    <GuiElement type="text" id="favor2desc" profile="npcFavorDesc" position="15px 35px" size="650px 20px" text="" />
                    <GuiElement type="text" id="favor2time" profile="npcFavorTime" position="15px 60px" size="300px 20px" text="" />
                    <GuiElement type="text" id="favor2reward" profile="npcFavorReward" position="320px 60px" size="150px 20px" text="" />
                    <GuiElement type="button" id="favor2view" profile="npcSmallButton" position="680px 15px" size="90px 30px" 
                                text="$l10n_button_view" onClick="onClickFavor2View" />
                    <GuiElement type="button" id="favor2cancel" profile="npcSmallButtonRed" position="780px 15px" size="90px 30px" 
                                text="$l10n_button_cancel" onClick="onClickFavor2Cancel" />
                    <GuiElement type="button" id="favor2goto" profile="npcSmallButton" position="680px 50px" size="90px 30px" 
                                text="$l10n_button_goto" onClick="onClickFavor2Goto" />
                    <GuiElement type="button" id="favor2complete" profile="npcSmallButtonGreen" position="780px 50px" size="90px 30px" 
                                text="$l10n_button_complete" onClick="onClickFavor2Complete" />
                </GuiElement>
                
                <!-- Note: Full implementation would have favors 3-10 here with incrementing positions -->
            </GuiElement>
            
            <!-- Footer / Button area -->
            <GuiElement type="empty" profile="npcFullWidth" position="0 600px" size="900px 100px">
                <GuiElement type="bitmap" profile="npcFillAll" imageColor="0.15 0.15 0.18 1" />
                
                <!-- Info text -->
                <GuiElement type="text" profile="npcFooterText" position="20px 20px" size="700px 20px"
                            text="$l10n_npc_favor_management_footer" id="footerText" />
                
                <!-- Refresh button -->
                <GuiElement type="button" profile="npcButton" position="600px 50px" size="120px 40px"
                            text="$l10n_button_refresh" onClick="onClickRefresh" id="refreshButton" />
                
                <!-- Close button -->
                <GuiElement type="button" profile="npcButton" position="730px 50px" size="150px 40px"
                            text="$l10n_button_close" onClick="onClickClose" id="closeButton" />
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>